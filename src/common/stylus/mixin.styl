// 背景图片
bg-image($url)
  background-image: url("~image/" + $url + ".png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

//两行
two-wrap()
  text-overflow:-o-ellipsis-lastline
  overflow:hidden
  text-overflow:ellipsis
  display:-webkit-box
  -webkit-line-clamp:2
  -webkit-box-orient:vertical

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

//文字渐变
grad-red()
  font-weight: bold;
  background-image: linear-gradient(-26deg, #d2161a, #ff9166);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
